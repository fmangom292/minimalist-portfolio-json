---
import Section from "../Section.astro"
import { projects } from "@cv"

---
<Section title="Proyectos">

    <ul>
        {
            projects.map(({name, description, startDate, endDate, highlights, url}) => {

                return(
                    <li>
                        <article>
                            <header>
                                <a href={url} title={`Ver el proyecto ${name}`}>
                                    <h3>{name}</h3>
                                </a>
                                <p>
                                    {description}
                                </p>
                            </header>
                            <footer>
                                
                                {highlights.map((highlight) => {
                                    return (
                                        <span>{highlight}</span>
                                    )
                                })}
                                
                            </footer>
                        </article>
                    </li>
                )
            })
        }
    </ul>

</Section>

<style>
    ul {
        display: grid;
        grid-template-columns: repeat(
                auto-fit, 
                minmax(200px, 1fr));
        gap: 1rem;
    }

    article {
        border-radius: 6px;
        border: 1px solid #f2f2f2;
        gap: 16px;
        display: flex;
        flex-direction: column;
        padding: 16px;
        height: 100%;
    }

    article header {
        flex: 1;
    }

    article p {
        color: #666;
        font-size: .75rem;
        line-height: 1.1;
        margin: 0;
        text-wrap: pretty;
        margin-bottom: 4px;
    }

    article h3 {
        margin-bottom: 4px;

        font-weight: 500;
        color: #111;
    }

    article a {
        color: #111;
    }

    article a:hover {
        color: #222;
        text-decoration: underline;
    }

    footer {
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    footer span{
        color: black;
        background-color: #f0f0f0;
        padding: 4px 8px;
        border-radius: 6px;
        padding: 0.25rem 0.5rem;
        gap: 8px;
        font-size: 0.6rem;
        font-weight: 500;
    }
</style>