---
import Section from "../Section.astro";

import { languages } from "@cv";


---

<Section title="Idiomas">
    <ul>
        {
            languages.map(({ language, fluency }) => {
                return (
                    <li>
                        <span>{ language }</span>
                        <span> - { fluency }</span>
                    </li>
                )
            })
        }
    </ul>
    
</Section>

<style>
    ul {
        display: flex;
        flex-direction: row;
        gap: 32px;
    }

    article h3 {
        font-weight: 500;
        color: #111;
    }

    article h4 {
        font-weight: 400;
        color: #222;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }

    time {
        font-size: 0.85rem;
        color: #555;
    }

    li {
        color: black;
        background-color: #f0f0f0;
        padding: 4px 8px;
        border-radius: 6px;
        padding: 0.25rem 0.5rem;
    }

</style>